<UserControl
    x:Class="WpfSheet.Views.SheetView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:c="clr-namespace:WpfSheet.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:m="clr-namespace:WpfSheet.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WpfSheet.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    d:DataContext="{d:DesignInstance vm:SheetViewModel, IsDesignTimeCreatable=True}"
    d:DesignHeight="622" d:DesignWidth="530"
    mc:Ignorable="d"
    Background="White">
    <UserControl.Resources>
        <ResourceDictionary>
            <c:PokemonToImageSourceConverter x:Key="PokemonToImageSourceConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="136"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="136"/>
            <RowDefinition Height="258*"/>
            <RowDefinition Height="207*"/>
        </Grid.RowDefinitions>

        <!-- Pokemon Image goes here -->
        <Border
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Column="0"
            Grid.Row="0"
            Margin="8">
            <Image Source="{Binding SelectedPokemon, Converter={StaticResource PokemonToImageSourceConverter}}"/>
        </Border>

        <Grid
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Column="0"
                Grid.Row="0"
                Margin="4"
                HorizontalAlignment="Right"
                Text="Species:"
                VerticalAlignment="Center"/>
            <ComboBox
                Grid.Column="1"
                Grid.Row="0"
                ItemsSource="{Binding PokemonSource}"
                Margin="4"
                SelectedItem="{Binding SelectedPokemon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ComboBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type m:Pokemon}">
                        <StackPanel>
                            
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>


        </Grid>


    </Grid>
</UserControl>